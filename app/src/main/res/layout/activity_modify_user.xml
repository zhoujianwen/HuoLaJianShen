<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.zhoujianwen.huolajianshen.activity.ModifyUserActivity">

    <include layout="@layout/action_toolbar" />

    <fragment
        android:id="@+id/fl_modify_base_data"
        android:name="cn.zhoujianwen.huolajianshen.fragment.BodyDataFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        tools:layout="@layout/fragment_base_data_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动类型"

            />

        <TextView
            android:id="@+id/tv_modify_action"
            style="@style/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@mipmap/ic_light_person"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:text="轻体力活" />
    </LinearLayout>


</LinearLayout>
